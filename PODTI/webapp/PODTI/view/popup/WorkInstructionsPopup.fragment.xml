<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form" xmlns:t="sap.ui.table"
    xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="kpmg.custom.pod.PODTI.PODTI.controller.popup.WorkInstructionsPopup"
    width="100%"
    height="100%">
    <Dialog title="Work Instructions" showHeader="true" contentHeight="90%"  contentWidth="90%" verticalScrolling="true" horizontalScrolling="true"> 
        <content>
            <!-- Container principale -->
            <VBox width="100%" height="100%" renderType="Bare" alignItems="Center" justifyContent="Center" fitContainer="true">
                <VBox width="95%" height="78%" renderType="Bare" alignItems="Center" justifyContent="Center" class="mainContainer containerAddOpts">
                    <t:Table id="workInstructionTable" rowSelectionChange="rowSelectionChange"  class="kpmgGDTable" alternateRowColors="true" rows="{/workInstructions}"
                        selectionMode="Single" selectionBehavior="RowOnly" visibleRowCountMode="Auto" rowHeight="45px" >
                    <t:layoutData>
                        <FlexItemData growFactor="1" baseSize="0%"/>
                    </t:layoutData>
                        <t:columns> 
                            <t:Column width="40%">
                                <Label text="{i18n>workInstruction.table.workInstruction-version}"  />
                                <t:template>
                                    <Text wrapping="false" text="{workInstruction} / {version}"  />
                                </t:template>
                            </t:Column>
                            <t:Column width="60%">
                                <Label text="{i18n>workInstruction.table.workInstructionDescription}"  />
                                <t:template>
                                    <Text wrapping="false" text="{description}"  />
                                </t:template>
                            </t:Column>  
                        </t:columns>
                    </t:Table>
                </VBox>
            </VBox>
        </content>
        <endButton>
            <Button text="{i18n>defect.button.close}" press="onClosePopup"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>